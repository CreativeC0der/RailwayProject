{{>navbar}}
<table>
    <thead>
        <tr>
            <th>Train Name</th>
            <th>Train Number</th>
            <th>Origin</th>
            <th>Destination</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each result}}
        <tr>
            <td>{{train_name}}</td>
            <td>{{train_number}}</td>
            <td>{{origin}}</td>
            <td>{{destination}}</td>
            <td>
                <i class="fa-solid fa-couch fa-beat" style="color: #261796;" class="book-button" data-bs-toggle="modal" data-bs-target="#trainModal"
                    onclick="GetNumber({{train_number}})"> <font style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">Book Seat Now</font></i>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<div class="modal fade" id="trainModal" tabindex="-1" aria-labelledby="trainModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="trainModalLabel">Details Information </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/book/overview" method="post">
                    <div>
                        <h1 class="modal-title fs-5" id="trainModalLabel"> You are booking Seat for <span
                                id="modaltrain"></span> train </h1>
                        <input type="hidden" id="trainNumber" name="trainNumber" value="">
                        <br>
                        <label for="numSeats">Number of Seats:</label>
                        <input type="number" id="numSeats" name="numSeats" min="1" max="10" required />
                    </div>
                    <br>
                    <div>
                        <label for="journeyDate">Journey Date:</label>
                        <input type="date" id="journeyDate" name="journeyDate" required />
                    </div>
                    <br>
                    <div>
                        <label for="seatType">Seat Type:</label>
                        <select id="seatType" name="seatType" required>
                            <option value="1A">1A</option>
                            <option value="2A">2A</option>
                            <option value="3A">3A</option>
                            <option value="SL">SL</option>
                        </select>
                    </div>
                    <br>
                    <div>
                        <label>Seat Preference : </label>
                        Upper <input type="checkbox" id="upperSeat" name="seatPreference" value="upper">
                        Middle <input type="checkbox" id="middleSeat" name="seatPreference" value="middle"> Lower
                        <input type="checkbox" id="lowerSeat" name="seatPreference" value="lower"> </label>
                    </div>
                    <br>
                    <div>
                        <label for="mealPreference"> Meal Preference:</label>
                        Vegetarian
                        <input type="radio" id="vegetarian" name="mealPreference" value="vegetarian" required />
                        Non-Vegetarian
                        <input type="radio" id="nonVegetarian" name="mealPreference" value="nonVegetarian" required />
                        No Meal
                        <input type="radio" id="noMeal" name="mealPreference" value="noMeal" required /> </label>
                    </div>
                    <br>
                    <p style="padding-left:75%;">
                        <input type="submit" value="Book Now" />
                    </p>
                </form>

            </div>
        </div>
    </div>
</div>
</div>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th,
    td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    .book-button {
        background-color: #3e8100;
        color: white;
        border: none;
        padding: 5px 10px;
        cursor: pointer;
    }

    .book-button:hover {
        background-color: #2f00ff;
    }

    .top-menu {
        display: flex;
        list-style-type: none;
        padding: 0;
    }

    .top-menu li {
        margin-right: 10px;
    }

    label {
        display: block;
        font-weight: bold;
    }

    input[type="number"],
    input[type="date"],
    select {
        width: 100%;
        padding: 5px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    input[type="radio"],
    input[type="checkbox"] {
        margin-right: 5px;
    }

    input[type="submit"] {
        background-color: #4caf50;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    input[type="submit"]:hover {
        background-color: #45a049;
    }
</style>


<script>
    function GetNumber(trainNumber) {

        document.getElementById("modaltrain").textContent = trainNumber;
        document.getElementById("trainNumber").value = trainNumber;
        var x = document.getElementById("trainNumber").value;
        console.log(x);
    }
</script>