{{>navbar}}
    <table>
        <thead>
            <tr>
                <th>Train Name</th>
                <th>Train Number</th>
                <th>Origin</th>
                <th>Destination</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each result}}
            <tr>
                <td>{{train_name}}</td>
                <td>{{train_number}}</td>
                <td>{{origin}}</td>
                <td>{{destination}}</td>
                <td>
                    <button type="button" class="book-button" data-bs-toggle="modal" data-bs-target="#trainModal">Book
                        Seat</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <div class="modal fade" id="trainModal" tabindex="-1" aria-labelledby="trainModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="trainModalLabel">You are booking Seat for <label id="modaltrain" value="{{train_number}}"> train </h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div>
                            <label for="numSeats">Number of Seats:</label>
                            <input type="number" id="numSeats" name="numSeats" min="1" max="10" required />
                        </div>

                        <div>
                            <label for="journeyDate">Journey Date:</label>
                            <input type="date" id="journeyDate" name="journeyDate" required />
                        </div>

                        <div>
                            <label for="seatType">Seat Type:</label>
                            <select id="seatType" name="seatType" required>
                                <option value="economy">Economy</option>
                                <option value="business">Business</option>
                                <option value="firstClass">First Class</option>
                            </select>
                        </div>

                        <div>
                            <label for="mealPreference">Meal Preference:</label>
                            <label for="mealPreference">Vegetarian</label>
                            <input type="radio" id="mealPreference" name="mealPreference" value="vegetarian" required />
                            <label for="mealPreference"> Non-Vegetarian </label>
                            <input type="radio" id="mealPreference" name="mealPreference" value="nonVegetarian"
                                required />
                            
                        </div>

                        <input type="submit" value="Book Now" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th,
    td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    .book-button {
        background-color: #438a00;
        color: white;
        border: none;
        padding: 5px 10px;
        cursor: pointer;
    }

    .book-button:hover {
        background-color: #2f00ff;
    }

    .top-menu {
        display: flex;
        list-style-type: none;
        padding: 0;
    }

    .top-menu li {
        margin-right: 10px;
    }

    form {
        width: 300px;
        margin: 0 auto;
    }

    div {
        margin-bottom: 10px;
    }

    label {
        display: block;
        font-weight: bold;
    }

    input[type="number"],
    input[type="date"],
    select {
        width: 100%;
        padding: 5px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    input[type="radio"],
    input[type="checkbox"] {
        margin-right: 5px;
    }

    input[type="submit"] {
        background-color: #4caf50;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    input[type="submit"]:hover {
        background-color: #45a049;
    }
</style>