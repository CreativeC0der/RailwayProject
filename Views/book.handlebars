{{>navbar}}
<table>
    <thead>
        <tr>
            <th>Train Name</th>
            <th>Train Number</th>
            <th>Origin</th>
            <th>Destination</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each result}}
        <tr>
            <td>{{train_name}}</td>
            <td>{{train_number}}</td>
            <td>{{origin}}</td>
            <td>{{destination}}</td>
            <td>
                <button type="button" class="book-button" data-bs-toggle="modal" data-bs-target="#trainModal"
                    onclick="GetNumber({{train_number}})">Book
                    Seat</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<div class="modal fade" id="trainModal" tabindex="-1" aria-labelledby="trainModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="trainModalLabel">You are booking Seat for <span id="modaltrain">
                    </span> train </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/book/overview" method="post">
                    <div>
                        <label for="numSeats">Number of Seats:</label>
                        <input type="number" id="numSeats" name="numSeats" min="1" max="10" required />
                    </div>

                    <div>
                        <label for="journeyDate">Journey Date:</label>
                        <input type="date" id="journeyDate" name="journeyDate" required />
                    </div>

                    <div>
                        <label for="seatType">Seat Type:</label>
                        <select id="seatType" name="seatType" required>
                            <option value="1A">1A</option>
                            <option value="2A">2A</option>
                            <option value="3A">3A</option>
                            <option value="SL">SL</option>
                        </select>
                    </div>

                    <div>
                        <label>Seat Preference : </label>
                        <label for="upperSeat"> Upper
                        <input type="checkbox" id="upperSeat" name="seatPreference" value="upper"> </label>
                        <label for="middleSeat"> Middle
                        <input type="checkbox" id="middleSeat" name="seatPreference" value="middle"> </label>
                        <label for="lowerSeat"> Lower
                        <input type="checkbox" id="lowerSeat" name="seatPreference" value="lower"> </label>
                    </div>

                    <div>
                        <label for="mealPreference"> Meal Preference:</label>
                        <label for="vegetarian">Vegetarian
                        <input type="radio" id="vegetarian" name="mealPreference" value="vegetarian" required /> </label>
                        <label for="nonVegetarian">Non-Vegetarian
                        <input type="radio" id="nonVegetarian" name="mealPreference" value="nonVegetarian" required /> </label>
                        <label for="noMeal">No Meal
                        <input type="radio" id="noMeal" name="mealPreference" value="noMeal" required /> </label>
                    </div>

                    <div>
                        <label for="Age">Enter your Age</label>
                        <input type="number" id="age" name="age" min="1" max="100" required />
                    </div>

                    <input type="submit" value="Book Now" />
                </form>

            </div>
        </div>
    </div>
</div>
</div>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th,
    td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    .book-button {
        background-color: #438a00;
        color: white;
        border: none;
        padding: 5px 10px;
        cursor: pointer;
    }

    .book-button:hover {
        background-color: #2f00ff;
    }

    .top-menu {
        display: flex;
        list-style-type: none;
        padding: 0;
    }

    .top-menu li {
        margin-right: 10px;
    }

    form {
        width: 300px;
        margin: 0 auto;
    }

    div {
        margin-bottom: 10px;
    }

    label {
        display: block;
        font-weight: bold;
    }

    input[type="number"],
    input[type="date"],
    select {
        width: 100%;
        padding: 5px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    input[type="radio"],
    input[type="checkbox"] {
        margin-right: 5px;
    }

    input[type="submit"] {
        background-color: #4caf50;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    input[type="submit"]:hover {
        background-color: #45a049;
    }
</style>


<script>
    function GetNumber(trainNumber) {
        console.log("Train Number: " + trainNumber);
        document.getElementById("modaltrain").textContent = trainNumber;
    }
</script>