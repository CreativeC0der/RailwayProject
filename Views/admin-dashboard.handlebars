{{>navbar}}
<div class="container">
    <div class="section">
        <h2>Station Details</h2>
        <table>
            <thead>
                <tr>
                    <th>Station Name</th>
                    <th>Station Code</th>
                    <th>Location</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each stations}}
                <tr>
                    <td>{{station_name}}</td>
                    <td>{{station_code}}</td>
                    <td>{{location}}</td>
                    <td style="padding-left:6%;">
                        <!-- modal button delete -->
                        <i class="fa-solid fa-trash-can" onclick="stationinfo('{{station_code}}')" class="btn btn-danger"
                            data-bs-toggle="modal" data-bs-target="#stationdeleteModal" > </i>
                        <!--delete modal-->
                        <div class="modal fade" id="stationdeleteModal" tabindex="-1"
                            aria-labelledby="stationdeleteModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="stationdeleteModalLabel">Delete Station
                                            Confirmation
                                        </h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <form action="/admin-dashboard/delete-station" method="POST">
                                            <input type="hidden" id="modal_delete_station_code" name="station_code"
                                                value="">
                                            <p><strong>Are you sure you want to delete this record?</strong> </p>
                                            <input type="submit" value="Yes" class="btn btn-outline-warning">
                                            <button type="button" class="btn btn-outline-secondary"
                                                data-bs-dismiss="modal">Close</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <div style="padding-left: 86%" ;>
            <button type="button" data-bs-toggle="modal" data-bs-target="#stationModal" class="btn btn-outline-primary"> Add
                station </button>
            <!-- station -->

            <div class="modal fade" id="stationModal" tabindex="-1" aria-labelledby="stationModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="stationModalLabel">Input Station details</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form action="/admin-dashboard/add-station" method="POST">
                                <div class="form-group">
                                    <label for="station_name">Station Name:</label>
                                    <input type="text" id="station_name" name="station_name" class="form-control"
                                        required>
                                </div>
                                <br>
                                <div class="form-group">
                                    <label for="station_code">Station Code:</label>
                                    <input type="text" id="station_code" name="station_code" class="form-control"
                                        required>
                                </div>
                                <br>
                                <div class="form-group">
                                    <label for="location">Location:</label>
                                    <input type="text" id="location" name="location" class="form-control" required>
                                </div>
                                <br>
                                <div class="form-group" style="padding-left: 60%;">
                                    <input type="submit" value="Submit" class="btn btn-outline-warning">
                                    <button type="button" class="btn btn-outline-dark"
                                        data-bs-dismiss="modal">Close</button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>

            </div>
        </div>
        <div class="section">
            <h2>Train Details</h2>
            <table>
                <thead>
                    <tr>
                        <th>Train Number</th>
                        <th>Train Name</th>
                        <th>Origin</th>
                        <th>Destination</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each trains}}
                    <tr>
                        <td>{{train_number}}</td>
                        <td>{{train_name}}</td>
                        <td>{{origin}}</td>
                        <td>{{destination}}</td>
                        <td style="padding-left: 5%;">
                            <!-- modal button delete -->
                            <i class="fa-solid fa-trash-can" onclick="traininfo('{{train_number}}','{{train_name}}')"
                                class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#traindeleteModal"> </i>
                            <!--delete modal-->
                            <div class="modal fade" id="traindeleteModal" tabindex="-1"
                                aria-labelledby="traindeleteModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="traindeleteModalLabel">Delete Train
                                                Confirmation
                                            </h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="/admin-dashboard/delete-train" method="POST">
                                                <input type="hidden" id="modal_delete_train_number" name="train_number"
                                                    value="">
                                                <input type="hidden" id="modal_delete_train_name" name="train_name"
                                                    value="">
                                                <p><strong>Are you sure you want to delete this record?</strong> </p>
                                                <input type="submit" value="Yes" class="btn btn-outline-warning">
                                                <button type="button" class="btn btn-outline-secondary"
                                                    data-bs-dismiss="modal">Close</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <div style="padding-left: 88%" ;>
                <button type="button" data-bs-toggle="modal" data-bs-target="#trainModal" class="btn btn-outline-primary "> Add
                    Train </button>
                <!-- train-->

                <div class="modal fade" id="trainModal" tabindex="-1" aria-labelledby="trainModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="trainModalLabel">Input Train details</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form action="/admin-dashboard/add-train" method="POST">
                                    <div class="form-group">
                                        <label for="destination">Destination:</label>
                                        <input type="text" id="destination" name="destination" class="form-control"
                                            required>
                                    </div>
                                    <br>
                                    <div class="form-group">
                                        <label for="origin">Origin:</label>
                                        <input type="text" id="origin" name="origin" class="form-control" required>
                                    </div>
                                    <br>
                                    <div class="form-group">
                                        <label for="train_name">Train Name:</label>
                                        <input type="text" id="train_name" name="train_name" class="form-control"
                                            required>
                                    </div>
                                    <br>
                                    <div class="form-group">
                                        <label for="train_number">Train Number:</label>
                                        <input type="text" id="train_number" name="train_number" class="form-control"
                                            required>
                                    </div>
                                    <br>
                                    <div class="form-group" style="padding-left: 60%;">
                                        <input type="submit" value="Submit" class="btn btn-outline-warning">
                                        <button type="button" class="btn btn-outline-dark"
                                            data-bs-dismiss="modal">Close</button>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
            <div class="section">
                <h2>Seat Details</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Seat Type</th>
                            <th>Available Seats</th>
                            <th>Train Number</th>
                            <th>Fare</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each seats}}
                        <tr>
                            <td>{{seat_type}}</td>
                            <td>{{available_seats}}</td>
                            <td>{{train_number}}</td>
                            <td>{{fare}}</td>
                            <td style="padding-left:6%;">
                                <!-- modal button delete -->
                                <i class="fa-solid fa-trash-can" onclick="seatinfo('{{train_number}}','{{seat_type}}')" 
                                    class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#seatdeleteModal"> </i>
                                <!--delete modal-->
                                <div class="modal fade" id="seatdeleteModal" tabindex="-1"
                                    aria-labelledby="seatdeleteModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h1 class="modal-title fs-5" id="seatdeleteModalLabel">Seat Delete
                                                    Confirmation</h1>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <form action="/admin-dashboard/delete-seat" method="POST">
                                                    <input type="hidden" id="modal_delete_seat_train_number"
                                                        name="train_number" value="">
                                                    <input type="hidden" id="modal_delete_seat_type" name="seat_type"
                                                        value="">
                                                    <p><strong>Are you sure you want to delete this record?</strong>
                                                    </p>
                                                    <input type="submit" value="Yes" class="btn btn-outline-warning">
                                                    <button type="button" class="btn btn-outline-secondary"
                                                        data-bs-dismiss="modal">Close</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                <div style="padding-left: 87%" ;>
                    <button type="button" data-bs-toggle="modal" data-bs-target="#seatModal" class="btn btn-outline-primary"> Add
                        Seat </button>
                    <!-- seat-->

                    <div class="modal fade" id="seatModal" tabindex="-1" aria-labelledby="seatModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="seatModalLabel">Input seat details</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form action="/admin-dashboard/add-seat" method="POST">
                                        <div class="form-group">
                                            <label for="fare">Fare:</label>
                                            <input type="number" id="fare" name="fare" min="1" class="form-control"
                                                required>
                                        </div>
                                        <br>
                                        <div class="form-group">
                                            <label for="available_seats">Available Seats:</label>
                                            <input type="text" id="available_seats" name="available_seats"
                                                class="form-control" required>
                                        </div>
                                        <br>
                                        <div class="form-group">
                                            <label for="seat_type">Seat Type:</label>
                                            <input type="text" id="seat_type" name="seat_type" class="form-control"
                                                required>
                                        </div>
                                        <br>
                                        <div class="form-group">
                                            <label for="train_number">Train Number:</label>
                                            <input type="text" id="train_number" name="train_number"
                                                class="form-control" required>
                                        </div>
                                        <br>
                                        <div class="form-group" style="padding-left: 60%;">
                                            <input type="submit" value="Submit" class="btn btn-outline-warning">
                                            <button type="button" class="btn btn-outline-dark"
                                                data-bs-dismiss="modal">Close</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <style>
                .container {
                    max-width: 900px;
                    background-color: #ffffff;
                    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.167);
                    border-radius: 10px;
                }

                h2 {
                    margin-bottom: 20px;
                }

                table {
                    width: 100%;
                    border-collapse: collapse;
                    margin-bottom: 20px;
                }

                table th,
                table td {
                    padding: 10px;
                    border: 1px solid #ccc;
                    text-align: left;
                }

                .section {
                    margin-bottom: 40px;
                }
            </style>

<script>

    function stationinfo(station_code) {
        console.log(station_code);
        document.getElementById("modal_delete_station_code").value = station_code;
    }
    function traininfo(train_number, train_name) {
        console.log(train_name);
        console.log(train_number);
        document.getElementById("modal_delete_train_number").value = train_number;
        document.getElementById("modal_delete_train_name").value = train_name;
    }
    function seatinfo(train_number, seat_type) {
        console.log(train_number);
        console.log(seat_type);
        document.getElementById("modal_delete_seat_train_number").value = train_number;
        document.getElementById("modal_delete_seat_type").value = seat_type;
    }
</script>